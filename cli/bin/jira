#!/usr/bin/env bash

_product_name() {
    echo "jira"
}

_product_definition() {
    _with_arguments 1 $@
    version=${1}
    echo "-Dproduct=jira
         -Dproduct.version=${version}
         -Dhttp.port=${HTTP_PORT:-2990}
         -Dcontext.path=${CONTEXT_PATH:-"/jira"}
         -Dajp.port=${AJP_PORT:-9009}
         -Dplugins=com.atlassian.jira:jira-func-test-plugin:${version},com.atlassian.jira.tests:jira-testkit-plugin:7.1.9,com.marvelution.jira.plugins:jira-jenkins-plugin:1.5.5
         -Dserver=127.0.0.1
         -Datlassian.darkfeature.notification.plugin.api.enabled=true
         -Datlassian.darkfeature.jira.onboarding.feature.disabled=true
         -Datlassian.mail.senddisabled=false
         -Djira.websudo.is.disabled=true"
}

_product_group_id() {
    echo "com.atlassian.jira"
}

_product_webapp_name() {
    echo "atlassian-jira-webapp"
}

source atlassian-product.sh

eval $@

if [[ -z $1 ]]; then
    $0 -h
fi
