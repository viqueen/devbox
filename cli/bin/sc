#! /usr/bin/env bash
#
# @LICENSE  Apache-2.0
# @AUTHOR   Hasnae R.
# @VERSION  1.0.0
#

source util.sh

if [[ -z $1 ]];
then
  sources_root=$(git config --get labset.workspaces.root)
  cd "${sources_root}/safetyculture" || exit
else
  repo=$(_join '-' "$@")
  location=$(git workspace -w safetyculture -s "${repo}" -dl)
  cd "${location}" || exit
fi
