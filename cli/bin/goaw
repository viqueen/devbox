#! /usr/bin/env bash

_with_arguments (){
    count=${1};
    shift;
    if [[ "$#" -lt ${count} ]]; then
        echo "missing arguments, expected at least ${count} but received $#";
        exit 1;
    fi
}

_join (){
    _with_arguments 1 "$@";
    delim=$1;
    shift;
    output=$(printf -- "$delim%s" "${@}");
    echo "${output:1}"
}

_with_arguments 1 "$@"
repo=$(_join '-' "$@")
location=$(cnav list -w amazon -s "${repo}" -dl)
cd "${location}"
