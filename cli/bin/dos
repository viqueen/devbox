#!/usr/bin/env node

'use strict';

const program = require('commander');
const moment = require('moment');

program.command('backdate <spaceKey> <publishDate> <title>')
    .description('backdates a blog')
    .action((spaceKey, publishDate, title) => {
        const date = moment(publishDate, "DD/MM/YYYY");
        console.log(
`fetch("/wiki/rest/api/content", {
    method: "POST",
    headers: {
        'Accept': 'application/json',
        'Content-Type': 'application/json'
    },
    body: JSON.stringify({
        type: "blogpost",
        title: "${title}",
        space: { key : "${spaceKey}" },
        history: {
            createdDate: "${date.toISOString()}"
        }
    })
})
.then(response => response.json())
.then(data => console.log(data))
`)
    });

program.command('restore <id> <version>')
    .description('restore content from trash')
    .action((id, version) => {
        console.log(
`fetch("/confluence/rest/api/content/${id}", {
    method: "PUT",
    headers: {
        'Accept': 'application/json',
        'Content-Type': 'application/json'
    },
    body: JSON.stringify({
        version: {
            number: ${version}
        },
        status: 'current'
    })
})
.then(response => response.json())
.then(data => console.log(data))
`
        )
    });

program.version('1.0.0');
program.parse(process.argv);