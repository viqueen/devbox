#!/usr/bin/env node

'use strict';

const prettyXml = require('xml-formatter');
const concatStream = require('concat-stream');

process
  .stdin
  .pipe(
    concatStream(
      function (buffer) {
        if (buffer.length > 0) {
          const xml = buffer.toString();
          console.log(prettyXml(xml, {}));
        }
      }
    )
  );
