#!/usr/bin/env bash

_product_name() {
    echo "bitbucket"
}

_product_definition() {
    _with_arguments 1 $@
    version=${1}
    echo "--product bitbucket
          --version ${version}
          --http-port ${HTTP_PORT:-7990}
          --context-path ${CONTEXT_PATH:-"/bitbucket"}
          --ajp-port ${AJP_PORT:-7009}
          --server 127.0.0.1"
}

_product_group_id() {
    echo "com.atlassian.bitbucket"
}

_product_webapp_name() {
    echo "bitbucket-webapp"
}

source atlassian-product.sh

eval $@

if [[ -z $1 ]]; then
    $0 -h
fi
