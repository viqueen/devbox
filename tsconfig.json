{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/modules",
    "resolveJsonModule": true,
    "rootDir": "modules",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017"
  },
  "include": ["modules"],
  "exclude": [
    "modules/**/*.test.ts",
    "modules/**/*.spec.ts",
    "modules/**/*.test.tsx",
    "modules/**/*.spec.tsx",
    "modules/**/*.snap"
  ]
}
